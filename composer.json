        "slim/slim": "^3.0",
        "twig/twig": "~1.22",
        "monolog/monolog": "^1.17",
        "pear2/net_transmitter": "1.0.0a5",
        "pear2/net_routeros": "1.0.0b5",
        "pear2/console_commandline": "^0.2.1",
